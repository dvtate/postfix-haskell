{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "ES2020",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "allowJs": true
    },
    "include": [
        "*/*.js",
        "*/*.ts",
        "*.js"
    ],
    "exclude": [
        "node_modules", "dist"
    ]
}