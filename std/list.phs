Any List $AnyList =
(( AnyList AnyList ):
    ( $a $b ) =
    a type b type ==
) $__2_lists_same_type =

$__2_lists_same_type ~ (:
    ( $a $b ) =
    a type $LT =
    a b LT.equals
) $global.== fun

$__2_lists_same_type ~ (:
    ( $a $b ) =
    a type $LT =
    a b LT.cmp 0 <=
) $global.<= fun

$__2_lists_same_type ~ (:
