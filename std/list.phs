    a type $LT =
    a b LT.cmp 0 <
) $global.< fun

$__2_lists_same_type ~ (:
    ( $a $b ) =
    a type $LT =
    a b LT.cmp 0 >
) $global.> fun

$__2_lists_same_type ~ (:
    ( $a $b ) =
    a type $LT =
    a b LT.cmp 0 >=
) $global.>= fun

$__2_lists_same_type ~ (:
    ( $a $b ) =
    a type $LT =
    a b LT.concat
) $global.++ fun
